upstream app {
  # Path to Unicorn SOCK file, as defined previously
  server unix:/tmp/unicorn.pp.sock fail_timeout=0;
}

server {
  listen 80;
  server_name {{inventory_hostname}};

  root /var/www/pp/current/public;

  try_files $uri/index.html $uri @app;

  location /admin/sidekiq {
    auth_basic "Restricted";
    auth_basic_user_file /etc/nginx/.htpasswd;

    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://app;
  }

  location /api/search {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://app;
  }

  location /api {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://ppeeuloadbalancer-2055795880.eu-west-1.elb.amazonaws.com/api/;
  }

  location /api2 {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://ppeeuloadbalancer-2055795880.eu-west-1.elb.amazonaws.com/api2/;
  }

  location @app {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://app;
  }

  error_page 500 502 503 504 /500.html;
  client_max_body_size 4G;
  keepalive_timeout 10;
}
