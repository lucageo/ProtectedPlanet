<div class="protected-area-map" id="map" data-bound-from="[90, 180]" data-bound-to="[-90, -180]"></div>

<main>
  <section class="info-card">
    <h2>Protected Areas in the Globe</h2>

    <hr>

    <a href="#" class="btn btn-primary">Download the WDPA dataset</a>
   </section>

  <div class="factsheet">
    <section class="column-left stats">
      <h3>Protected Areas (PAs)</h3>
      <p>
        <%= image_tag "map-marker@2x.png", style: "width: 29px; height: 44px" %>
        <%= @number_of_pas %>
      </p>
    </section>

    <section class="column-right stats">
      <h3>PAs with IUCN category</h3>
      <p>
        <%= image_tag "IUCN@2x.png", style: "width: 50px; height: 49px" %>
        <%= @pas_with_iucn_category %>
      </p>
    </section>

    <section class="column-right stats">
      <h3>Number of designations</h3>
      <p>
        <%= image_tag "designation@2x.png", style: "width: 38px; height: 49px" %>
        <%= @number_of_designations %>
      </p>
    </section>

    <section class="column-left stats">
      <h3>Countries providing data</h3>
      <p>
        <%= image_tag "data@2x.png", style: "width: 47px; height: 49px" %>
        <%= @countries_providing_data %>
      </p>
    </section>
  </div>
</main>
