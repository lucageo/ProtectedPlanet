    <hr>

    <a href="#" data-download-object="all" class="btn btn-primary btn-download">Download the WDPA dataset</a>
   </section>

  <div class="factsheet">
    <%= render "stats/factsheet_protected_areas" %>
    <%= render "stats/factsheet_protected_coverage" %>
