<div class="bg-img">
  <main>
    <h2>Search for protected areas, countries or regions</h2>
    <section class="search-bar">
      <%= render 'shared/search_form', query: @query %>
    </section>

    <% if @query %>
      <aside class="search-filters">
        <h4>Filter Your Results</h4>

        <ul>
          <li>
            <h5>Location</h5>

            <ul>
              <li>United States</li>
              <li>United Kingdom</li>
            </ul>
          </li>

          <li>
            <h5>IUCN Category</h5>

            <ul>
              <li>Not Reported</li>
              <li>IV</li>
            </ul>
          </li>
        </ul>
      </aside>

      <section class="search-results">
        <h4>
          <% if @similar_search %>
            <strong>No results found for "<%= @query %>"</strong> -
          <% end %>

          Showing <%= @protected_areas.count %> <%= 'result'.pluralize @protected_areas.count %> for "<%= @search.query %>"
        </h4>
        <%= render 'search_results', protected_areas: @protected_areas %>
      </section>

      <%= will_paginate(@protected_areas,
            :previous_label => "\u276E", :next_label => "\u276F") %>
    <% end %>
  </main>
</div>
