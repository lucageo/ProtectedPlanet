<ul>
  <li class="facet">
    <%= clear_filters_link(params) %>
  </li>
  <% facets.each do |name, models| %>
    <li class="facet">
      <h5><%= name.humanize %></h5>

      <ul>
        <% models.each do |facet| %>
          <li>
            <%= facet_link facet %>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
