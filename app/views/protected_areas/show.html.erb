<div id="map"></div>

<div class="container">
  <main>
    <section class="info-card">
      <h2><%= @protected_area.name %></h2>

      <hr>
    </section>

    <div class="factsheet">
      <section>
        Official Record
      </section>

      <section class="column-left">
        <div>
          Wikipedia
          <% if @wikipedia_summary %>
            <small><%= link_to t('wikipedia_article_link'), @wikipedia_summary.article_url %></small>
          <% end %>
        </div>
        <% if @wikipedia_summary %>
          <p><%= @wikipedia_summary.summary %></p>
          <%= image_tag @wikipedia_summary.image_url %>
        <% else %>
          <p><%= t('wikipedia_not_found') %>
        <% end %>
      </section>

      <section class="column-right">
        Photos
      </section>
    </div>
  </main>
</div>

<script>
  $(document).ready(function() {
    fitToBounds(<%= @protected_area.bounds.to_json %>);
  });
</script>
