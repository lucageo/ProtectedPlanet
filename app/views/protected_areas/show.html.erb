<div id="map"></div>

<div class="container">
  <main>
    <section class="info-card">
      <h2><%= @protected_area.name %></h2>

      <hr>
    </section>

    <div class="factsheet">
      <section>
        Official Record
      </section>

      <section class="column-left">
        <div>
          Wikipedia
          <% if @wikipedia_article %>
            <small><%= link_to t('wikipedia_article_link'), @wikipedia_article.url %></small>
          <% end %>
        </div>
        <% if @wikipedia_article %>
          <p><%= @wikipedia_article.summary %></p>
          <%= image_tag @wikipedia_article.image_url %>
        <% else %>
          <p><%= t('wikipedia_not_found') %>
        <% end %>
      </section>

      <section class="column-right">
        <%= render 'photos_list', images: @protected_area.images %>
      </section>
    </div>
  </main>
</div>

<script>
  $(document).ready(function() {
    fitToBounds(<%= @protected_area.bounds.to_json %>);
  });
</script>
