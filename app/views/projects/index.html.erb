<main>
  <% @projects.each_with_index do |project, i| %>
    <section class="page-header">
      <h1><i class="fa fa-edit"></i> <%= best_in_place project, :name, as: :input, activator: "", ok_button: "Save", cancel_button: "Cancel" %> (<%= project.items.count %> Items) <i class="fa fa-download"></i> Download Complete Data Set</h1>
    </section>
      
    <section>
      <% project.items.each do |item| %>
        <div class="item">
          <div class="item-preview">
            <img src="http://placekitten.com/600/400">
          </div>

          <div class="item-info">
            <p><%= item.name %> (<%= item.class %>)</p>
            <p><i class="fa fa-download"></i> Download Data Set</p>
          </div>
        </div>
      <% end %>
    </section>
  <% end %>
</main>