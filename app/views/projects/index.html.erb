<main>
  <% @projects.each_with_index do |project, i| %>
    <section class="page-header">
      <h1><i class="fa fa-edit"></i> <%= best_in_place project, :name, as: :input, activator: "", ok_button: "Save", cancel_button: "Cancel" %> (<%= project.items.count %> Items)</h1>
      <h3>Download Complete Data Set</h3>
    </section>
      
    <section>
      <% project.items.each do |item| %>
        <div class="item">
          <p><%= item.name %></p>
          <p>Download Data Set</p>
        </div>
      <% end %>
    </section>
  <% end %>
</main>