<section class="fact">
  <h2 class="fact__header">
    Protected Area Management Effectiveness (PAME)
    <sup class="header__sup"><a href="#ref2">(Ref 2 â†“ )</a></sup>
  </h2>
  <div class="fact__body">
    <div class="value row">
      <p class="u-left value__number value__number--xlarge"><%= "#{(@pame_statistics.average_score*100).round(1)}%" rescue "N/A" %></p>
      <small class="value__label value__label--side">
        Overall average score. This is an average against 36 separate indicators of management effectiveness.
      </small>
    </div>

    <div class="flex-start">
      <div class="value stats-card__element stats-card__element--push-right">
        <p class="value__number"><%= "#{(@pame_statistics.total_area_assessed).round(2)}km2" rescue "N/A" %></p>
        <small class="value__label">of land assessed</small>
      </div>
      <div class="value stats-card__element stats-card__element--push-right">
        <p class="value__number"><%= @pame_statistics.assessments || "N/A" %></p>
        <small class="value__label">PAME assessments undertaken</small>
      </div>
      <div class="value stats-card__element stats-card__element--push-right">
        <p class="value__number"><%= @pame_statistics.assessed_pas || "N/A" %></p>
        <small class="value__label">Protected areas assessed</small>
      </div>
    </div>
  </div>
</section>

