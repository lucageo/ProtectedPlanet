<section class="fact">
  <h2 class="fact__header">Governance types<i class="fact__external-link fa fa-external-link-square"></i></h2>
  <div class="fact__body">
    <table class="table">
      <tr class="table__header">
        <th class="table__column">Name</th>
        <th class="table__column">Governance type</th>
        <th class="table__column">Count</th>
        <th class="table__column">%</th>
      </tr>
      <% @country.protected_areas_per_governance.each do |row| %>
        <tr class="table__row">
          <td class="table__label table__label--link"><%= row["governance"] %></td>
          <td class="table__value">?</td>
          <td class="table__value"><%= row["count"] %></td>
          <td class="table__value"><%= row["percentage"].to_f.round(2) %></td>
        </tr>
      <% end %>
      </tr>
    </table>
  </div>
</section>

