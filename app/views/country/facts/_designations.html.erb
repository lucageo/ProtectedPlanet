<div class="one-thirds one-thirds--no-margin">
  <div class="fact">
    <h2 class="fact__header">National designations<i class="fact__external-link fa fa-external-link-square"></i></h2>
    <div class="fact__body fact__body--lateral-padding">
      <p class="fact__single-figure fact__single-figure--push-down"><%= @designations_by_jurisdiction["National"].count rescue 0 %></p>
      <table class="table">
        <tr class="table__header">
          <th class="table__column">Categories</th>
          <th class="table__column">Count</th>
        </tr>
        <% @country.protected_areas_per_designation(Jurisdiction.find_by_name("National")).first(10).each do |row| %>
          <tr class="table__row">
          <td class="table__label table__label--link"><%= link_to row["designation_name"], search_url(country: @country.id, designation: row["designation_id"], main: :country) %></td>
            <td class="table__value"><%= row["count"] %></td>
          </tr>
        <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>

