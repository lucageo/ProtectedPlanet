<div class="template--marine">
  
  <%= render partial: "marine/sections/header" %>

  <div class="v-marine container--push-bottom">
    
    <div class="section--block-color">
      <section class="t--marine__section u-no-padding--bottom">
        <%= render partial: "marine/sections/coverage_map" %>
      </section>
    </div>

    <section class="t--marine__section container--profile">
      <%= render partial: "marine/sections/distribution" %>
    </section>

    <section class="t--marine__section container--profile">
      <%= render partial: "marine/sections/mpas" %>
    </section>

    <div class="section--block-color">
      <section class="t--marine__section t--marine__section--fact-bottom container--profile">
        <%= render partial: "marine/sections/size_distribution" %>
      </section>
    </div>

    <div class="flex-row justify-content-end u-height-0 container--profile">
      <div class="fact--circle fact--marine u-up-halfway">
        <div class="fact__content flex-row align-items-center">
          <p>2/3rds of all marine ecoregions have less than 10% of their area protected</p>
        </div>
      </div>
    </div>

    <section class="t--marine__section t--marine__section--fact-top container--profile">
      <%= render partial: "marine/sections/ecoregions" %>
    </section>
    
    <div class="section--block-color">
      <section class="t--marine__section container--profile">
        <%= render partial: "marine/sections/growth" %>
      </section>
    </div>

    <section class="t--marine__section container--profile">
      <%= render partial: "marine/sections/target" %>
    </section>
    
    <footer>
      <%#= render partial: "marine/sections/footer" %>
    </footer>

  </div>
</div>